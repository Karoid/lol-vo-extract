{
	"$schema": "https://json-schema.org/draft-07/schema",
	"title": "Config",
	"description": "lol-vo-extract.config",
	"type": "object",
	"properties": {
		"target": {
			"description": "解压目标",
			"type": "string",
			"examples": [
				"{champion slot}|{min skinID or single skinID}|[{max skinID}]"
			]
		},
		"lang": {
			"description": "解压语言",
			"type": "string",
			"enum": [
				"zh_cn",
				"en_us"
			]
		},
		"format": {
			"description": "音频文件格式",
			"type": "string",
			"enum": [
				"wav",
				"ogg",
				"wem"
			]
		},
		"sourceWAD": {
			"description": "WAD文件来源：\n'cache'，优先使用已缓存的WAD文件。若不存在则下载文件\n'fetch'，n优先下载最新的WAD文件\n'client'，n优先使用游戏客户端中的文件WAD文件",
			"type": "string",
			"default": "cache",
			"oneOf": [
				{
					"const": "cache",
					"description": "WAD文件来源：\n优先使用已缓存的WAD文件。若不存在则下载文件"
				},
				{
					"const": "fetch",
					"description": "WAD文件来源：\n优先下载最新的WAD文件"
				},
				{
					"const": "client",
					"description": "WAD文件来源：\n优先使用游戏客户端中的文件WAD文件"
				}
			]
		},
		"useSFXLevel": {
			"description": "音效文件提取策略\n0，不提取音效\n1，只用于辅助分析事件\n2、提取音效",
			"type": "integer",
			"default": 0,
			"oneOf": [
				{
					"const": 0,
					"description": "WAD文件来源：\n优先使用已缓存的WAD文件。若不存在则下载文件"
				},
				{
					"const": 1,
					"description": "WAD文件来源：\n优先下载最新的WAD文件"
				},
				{
					"const": 2,
					"description": "WAD文件来源：\n优先使用游戏客户端中的文件WAD文件"
				}
			]
		},
		"forceUseBase": {
			"description": "是否强制解析基础皮肤文件，以辅助分析事件",
			"type": "boolean",
			"default": false
		},
		"_path": {
			"description": "路径合集",
			"type": "object",
			"properties": {
				"dirRaw": {
					"description": "原始素材目录",
					"type": "string"
				},
				"dirBase": {
					"description": "基本素材目录",
					"type": "string"
				},
				"dirWAD": {
					"description": "WAD文件目录",
					"type": "string"
				},
				"dirGameVoice": {
					"description": "本科客户端英雄文件目录",
					"type": "string"
				},
				"dirGameDataRaw": {
					"description": "原始数据目录",
					"type": "string"
				},
				"dirAutogen": {
					"description": "lol-vp-aeproject-autogen项目目录",
					"type": "string"
				},
				"rextractorConsole": {
					"description": "RExtractorConsole.exe程序路径",
					"type": "string"
				},
				"line": {
					"description": "台词文件路径",
					"type": "string"
				},
				"rst": {
					"description": "RST字典路径",
					"type": "string"
				}
			}
		}
	},
	"required": [
		"target"
	]
}